body {
    background: url('http://dl.dropbox.com/u/7984474/pix/future/KAHTn.jpg');
    background-size: 100% 200%;
    color: #fff;
    font-family: "Bitstream Vera Sans", Arial, Helvetica, sans-serif;
}

h3 {
    text-align: center;
}

input
{
    color: #000;
}

input[type=checkbox] {
color: #fff;
}

input[type=submit] {
font-family: 'Oswald', sans-serif;
font-size: 13px;
color: #707070;
margin-right: -4px;
background:-webkit-gradient(linear, 0% 100%, 0% 0%, from(#f1f1f1), to(#f9f9f9));
text-shadow: 0px 0px 1px #efefef;
-webkit-box-shadow: 0px 2px 0px #d9d9d9;
-webkit-border-radius: 2px;
border: 1px solid #ccc;
z-index: 2;
margin-top: 10px;
}

input[type=text]
{
font-size: 15px;
width: 400px;
-webkit-border-radius: 2px;
border: 1px solid #aaa;
padding: 1px;
color: #fff;
background-color: rgba(100%, 100%, 100%, 0.3);
}
input[type=text]:focus {
outline: none;
}

a
{
    color: #9B9C83;
    text-decoration:none;
    border-bottom: 1px orange dashed;
}

a:hover 
{
    color: #0080FF;
}

#container
{
    margin-bottom: -500px;
    box-shadow: 0 0 3px rgba(0, 0, 0, 0.8), 1px 1px 0px rgba(255, 255, 255, 0.3) inset, -1px -1px 0px rgba(255, 255, 255, 0.1) inset, 0 0 6px rgba(255, 255, 255, 0.2) inset;
    -moz-border-radius: 5px;
    -webkit-border-radius: 5px;
    background: rgba(0, 0, 0, .5);
    margin: auto;
    padding:
 20px;
    width: 500px;
}

#title
{
    color: #fff;
    margin: 0;
    margin-bottom: 30px;
    font-weight: normal;
    font-family: sans-serif;
    text-align: center;
    font-size:50px;
}

ul#navigation, ul#form
{
    list-style-type: none;
    padding: 0;
}

ul#navigation
{
    float: right;
}

ul#form
{
    clear: both;
}

ul#navigation li
{
    float: left;
    margin: 0;
    padding: 5px 0;
}

ul#navigation li a
{
    font-weight: bold;
    color: #ffffff;
    padding: 5px 15px;
    margin-left: 1px;
    text-decoration: none;
}

ul#navigation li  a:hover
{
    color: #44352C;
}

ul#form li
{
    width: 700px;
}

#footer
{
    color: #9B9C83;
    font-size: small;
    text-align: right;
}

#address_bar
{
    text-align: center;
    padding: 5px 0;
    color: #ffffff;
}

#go
{
    background-color: #ffffff;
    font-weight: bold;
    border: 0 #ffffff solid;
    padding: 2px 5px;
}

#address_box
{
    width: 500px;
}

.option
{
    padding: 2px 0;
}

.option label
{
    border-bottom: 2px #ffffff solid;
}

form
{
    margin: 0;
}

#error, #auth
{
    background-color: #BF6464;
    border-top: 1px solid #44352C;
    border-bottom: 1px solid #44352C;
    width: 700px;
    clear: both;
}

#auth
{
    background-color: #94C261;
}

#error p, #auth p, #auth form
{
    margin: 5px;
}
