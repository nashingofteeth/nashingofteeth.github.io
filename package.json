{
  "name": "nash.video",
  "version": "2.0.0",
  "description": "Custom static site generator for nash.video",
  "scripts": {
    "build": "node build.js",
    "start": "concurrently \"npm run watch\" \"http-server dist -c-1\"",
    "watch": "node --watch-path=./src --watch-path=./templates --watch-path=./public --watch-path=./tools --watch-preserve-output build.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nashingofteeth/nashingofteeth.github.io.git"
  },
  "author": {
    "name": "Matthew Nash",
    "email": "matthew@nash.video"
  },
  "engines": {
    "node": ">=18.11.0"
  },
  "dependencies": {
    "gray-matter": "^4.0.3",
    "marked": "^11.2.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "http-server": "^14.1.1"
  }
}
