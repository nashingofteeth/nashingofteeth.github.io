---
layout: layouts/base.njk
---
{%- css %}{% include "public/css/videos.css" %}{% endcss %}

<header>
	<h1>&#128249; VIDEOS</h1>
</header>

<main>
{% for video in collections.videos | reverse %}
	<article style="margin-left: {{ video.data.margin_left }}%;">
		<div class="container">
		    <a href="{{ video.data.mp4 }}" data-webm="{{ video.data.webm }}">
		        <picture>
		            <source srcset="../img/{{ video.data.webp }}" type="image/webp" />
		            <img fetchpriority="{% if loop.first %}high{% else %}auto{% endif %}" loading="{% if loop.first %}eager{% else %}lazy{% endif %}" src="../img/{{ video.data.jpg }}" width="{{ video.data.width }}" height="{{ video.data.height }}" alt="{{ video.data.title }} video cover" />
		        </picture>
		        <div class="play-button">&#9654;</div>
		    </a>
		</div>

	    <nav><small>
		    &#128190; download:
		    <a href="{{ video.data.mp4 }}" target="_blank">lossy</a>
		    or
		    <a href="{{ video.data.master }}" target="_blank">lossless</a>
	    </small></nav>

		<h2>{{ video.data.title }}</h2>

		<em><time datetime="{{ video.date | htmlDateString }}">{{ video.date | readableDate() }}</time></em>

		{{ video.content | safe }}

	</article>
{% endfor %}
</main>

